{
  "statusLine": {
    "type": "command",
    "command": "node ./.claude/hooks/spw-statusline.js"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/session-start-sync-tasks-template.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "node ./.claude/hooks/spw-guard-user-prompt.js"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node ./.claude/hooks/spw-guard-paths.js"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "node ./.claude/hooks/spw-guard-stop.js"
          }
        ]
      }
    ]
  }
}
